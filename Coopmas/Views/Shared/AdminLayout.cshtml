
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body>

    <div class="w3-sidebar w3-bar-block w3-light-grey w3-card" style="width:18%">
        <a asp-controller="Admin" asp-action="UrunListele" class="w3-bar-item w3-button">Ürünler</a>
        <a asp-controller="Admin" asp-action="HizmetListele" class="w3-bar-item w3-button">Hizmetler</a>
        <a asp-controller="Admin" asp-action="TalepGoruntule" class="w3-bar-item w3-button">Talepler</a>
        <a asp-controller="Admin" asp-action="MesajGoruntule" class="w3-bar-item w3-button">Mesajlar</a>
        <div class="w3-dropdown-hover">
            <button class="w3-button">
                Ekip
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="w3-dropdown-content w3-bar-block">
                <a href="#" class="w3-bar-item w3-button">Ekrem bey</a>
                <a href="#" class="w3-bar-item w3-button">Burcu Ayaz</a>
                <a href="#" class="w3-bar-item w3-button">Kadir bey</a>
                <a href="#" class="w3-bar-item w3-button">Barış bey</a>

            </div>
        </div>

    </div>

    <div style="margin-left:18%"> 

    @RenderBody()

     </div>  

</body>
</html>
